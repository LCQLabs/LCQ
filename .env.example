# LCQ - Environment Variables Example

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=LCQ
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_ENV=development

# Model Context Protocol (MCP)
MCP_API_KEY=your_mcp_api_key_here
MCP_ENDPOINT_ID=lcq-default
MCP_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3
MCP_DEBUG=false

# Solana RPC
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
SOLANA_COMMITMENT=confirmed
SOLANA_TRANSACTION_TIMEOUT=60000

# Authentication (if implementing auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Database (if needed)
DATABASE_URL=postgresql://postgres:password@localhost:5432/lcq

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_TRANSACTION_OPTIMIZER=true
NEXT_PUBLIC_ENABLE_PROGRAM_DEPLOYMENT=true
NEXT_PUBLIC_ENABLE_ACCOUNT_ANALYZER=true
NEXT_PUBLIC_ENABLE_SMART_CONTRACT_AUDITOR=true
NEXT_PUBLIC_ENABLE_DATA_SCRAPER=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000